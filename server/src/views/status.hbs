<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitMe API Status</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Poppins', sans-serif; 
            margin: 0; 
            background-color: #f7f8fa; 
            color: #333; 
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .container { 
            width: 100%;
            max-width: 900px; 
            margin: 50px; 
            padding: 30px; 
            background-color: #fff; 
            border-radius: 12px; 
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }
        .container:hover {
            transform: translateY(-5px);
        }
        .header { 
            display: flex; 
            align-items: center; 
            justify-content: space-between;
            border-bottom: 1px solid #e9ecef; 
            padding-bottom: 20px; 
            margin-bottom: 30px; 
        }
        .header-left {
            display: flex;
            align-items: baseline;
        }
        .logo { 
            font-size: 28px; 
            font-weight: 700; 
            color: #6a11cb; 
            margin-right: 12px;
        }
        h1 { 
            font-size: 24px; 
            margin: 0; 
            font-weight: 600;
            color: #212529; 
        }
        .status-badge { 
            padding: 8px 18px; 
            background-color: #e4f8e9; 
            color: #28a745; 
            border-radius: 20px; 
            font-weight: 600; 
            font-size: 14px;
            letter-spacing: 0.5px;
        }
        .grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); 
            gap: 25px; 
        }
        .metric { 
            background-color: #f8f9fa; 
            padding: 20px; 
            border-radius: 10px; 
            border: 1px solid #e9ecef; 
            transition: all 0.3s ease;
        }
        .metric:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            border-color: #6a11cb;
        }
        .metric-title { 
            font-size: 15px; 
            color: #6c757d; 
            margin-bottom: 12px; 
            font-weight: 500; 
        }
        .metric-value { 
            font-size: 20px; 
            color: #343a40; 
            font-weight: 600; 
            transition: color 0.3s ease; 
        }
        .metric-value.updated { 
            color: #6a11cb; 
            animation: pulse 0.5s ease;
        }
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        footer { 
            text-align: center; 
            margin-top: 40px; 
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
            font-size: 13px; 
            color: #6c757d; 
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-left">
                <div class="logo">FitMe API</div>
                <h1>Server Status</h1>
            </div>
            <div class="status-badge">{{status}}</div>
        </div>
        
        <div class="grid">
            <div class="metric">
                <div class="metric-title">Uptime</div>
                <div class="metric-value" id="uptime">{{uptime}}</div>
            </div>
            <div class="metric">
                <div class="metric-title">Node.js Version</div>
                <div class="metric-value" id="node-version">{{nodeVersion}}</div>
            </div>
            <div class="metric">
                <div class="metric-title">Platform</div>
                <div class="metric-value" id="platform">{{platform}} / {{arch}}</div>
            </div>
             <div class="metric">
                <div class="metric-title">CPU Cores</div>
                <div class="metric-value" id="cpu-count">{{cpuCount}}</div>
            </div>
            <div class="metric">
                <div class="metric-title">Memory (RSS)</div>
                <div class="metric-value" id="memory-rss">{{memory.rss}}</div>
            </div>
            <div class="metric">
                <div class="metric-title">Heap Used</div>
                <div class="metric-value" id="heap-used">{{memory.heapUsed}} / {{memory.heapTotal}}</div>
            </div>
        </div>
        <footer>FitMe - Cycle-Based Fitness Companion</footer>
    </div>

    <script>
        function updateMetric(elementId, newValue) {
            const element = document.getElementById(elementId);
            if (element && element.textContent !== newValue) {
                element.textContent = newValue;
                element.classList.add('updated');
                setTimeout(() => {
                    element.classList.remove('updated');
                }, 500);
            }
        }

        function fetchStatus() {
            fetch('/status-json')
                .then(response => response.json())
                .then(data => {
                    updateMetric('uptime', data.uptime);
                    updateMetric('memory-rss', data.memory.rss);
                    updateMetric('heap-used', data.memory.heapUsed + ' / ' + data.memory.heapTotal);
                })
                .catch(error => console.error('Error fetching status:', error));
        }
        setInterval(fetchStatus, 1000);
    </script>
</body>
</html> 